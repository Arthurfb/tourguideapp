<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/welcome_message"
        style="@style/HeadLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/welcome_message" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/village_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/largeImageSize"
                android:layout_margin="@dimen/generalMargin"
                tools:src="@drawable/castell_view" />

            <TextView
                android:id="@+id/general_information"
                style="@style/InfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/generalMargin"
                tools:text="@string/general_info" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
